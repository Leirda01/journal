#!/usr/bin/env bash

editor=${EDITOR:=vim}
path="$HOME/.config/journal/lib"
journal_name=${JOURNAL_NAME:=saveuriendir}

if [[ ( -f $path/$1 ) && ( -x $path/$1 ) ]]; then
  call_mode="$path/$1" && shift
elif [[ $(type -t $1) ]]; then
  call_command="$1" && shift
fi

[[ $(vim --version | grep +clientserver) ]] && socket=true

[[ $(date +%-H) -lt 4 ]] && date="yesterday" || date="today"
date=$(date --date=$date +%Y/%m/%d)

[[ $@ ]] && journal="${@%%.adoc}.adoc" || journal="main.adoc"
path="$HOME/$journal_name/$date/"

mkdir -p "$path"; cd "$path"
if [[ $call_mode ]]; then
  . $call_mode 
elif [[ $call_command ]]; then
  $call_command "$@"
else
  . $path/write
fi
