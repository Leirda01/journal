#!/usr/bin/env bash

editor=${EDITOR:=vim}
journal_name=${JOURNAL_NAME:=saveuriendir}
journal_separator=${JOURNAL_SEP:=/}
command_path="$HOME/.config/journal/lib"

if [[ ( -f $command_path/$1 ) ]]; then
  call_mode="$command_path/$1" && shift
elif [[ $(type -t $1) ]]; then
  call_command="$1" && shift
fi

[[ $(date +%-H) -lt 4 ]] && date="yesterday" || date="today"
date=$(date --date=$date +%Y${journal_separator}%m${journal_separator}%d)

[[ $@ ]] && page="${@%%.adoc}.adoc" || page="main.adoc"
page="$(basename ${date}${journal_separator}${page})"

path="$(dirname $HOME/$journal_name/$page)"
mkdir -p "$path"; cd "$path"

(
if [[ $call_mode ]]; then
  . $call_mode
elif [[ $call_command ]]; then
  $call_command $@
else
  . $command_path/write
fi
)
