#!/usr/bin/env bash

date=$(date --date="$@" +%Y${journal_separator}%m${journal_separator}%d)
journal=$(mktemp /tmp/journal.XXXXXXXXXX)

trap "rm -r $journal" EXIT

cd "$HOME/$journal_name/"
for file in $(ls ${date}); do
  echo -e "\n=> $file\n" >> $journal
  cat "${date}${journal_separator}$file" >> $journal
done

. "$command_path/write"
